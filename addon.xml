<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="plugin.games.rom.collection.browser.widget"
  version="0.1.0"
  name="Rom Collection Browser Widget"
  provider-name="bruny, malte">
  <requires>
    <!-- Require Kodi Krypton or above -->
    <import addon="xbmc.addon" version="17.0.0"/>
    <!--<import addon="xbmc.gui" version="5.12.0"/>-->
    <import addon="xbmc.python" version="2.25.0"/>
    <import addon="service.rom.collection.browser" version="1.0.0"/>
	<import addon="script.games.rom.collection.browser" version="2.1.5"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable game</provides>
  </extension>
  <extension point="xbmc.addon.metadata">    
    <summary lang="de">Importiert, verwaltet und startet Spiele in XBMC</summary>    
    <summary lang="en">Import, browse and launch games in XBMC</summary>    
    <description lang="de"></description>    
    <description lang="en"></description>
    <language></language>
    <platform>all</platform>
    <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
    <forum>forum.kodi.tv/showthread.php?tid=70115</forum>
    <website>https://github.com/maloep/romcollectionbrowser</website>
    <source>https://github.com/maloep/romcollectionbrowser</source>
    <assets>
      <icon>icon.png</icon>
    </assets>
  </extension>
</addon>
